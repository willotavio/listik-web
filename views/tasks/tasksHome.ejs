<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./../partials/head.ejs') %>
    <title>Home</title>
</head>
<body>
    <%- include('./../partials/nav.ejs') %>
    
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Welcome! Here's your to do list</h3>
            </div>
            <div class="card-body">
                <% if(tasks.length > 0) {%>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Deadline</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tasks.forEach((task) => { let { id, taskTitle, taskDescription, taskDeadline } = task%>
                                <tr>
                                    <td><%= id %></td>
                                    <td><%= taskTitle %></td>
                                    <td><%= taskDescription %></td>
                                    <td><%= taskDeadline %></td>
                                    <td>
                                        <div class="d-flex justify-content-around">
                                            <a href="/tasks/edit/<%= task.id %>" class="btn btn-warning btn-sm">[|]</a>
                                            <form action="/tasks/delete" method="POST" onsubmit="confirmDelete(event, this)">
                                                <input type="text" name="taskId" value="<%= task.id %>" class="form-control" hidden></input>
                                                <button type="submit" class="btn btn-danger btn-sm">X</button>    
                                            </form>    
                                        </div>
                                    </td>
                                </tr>
                            <% }) %> 
                        </tbody>
                    </table>
                <% }else{ %>
                    <h2>Empty!</h2>
                <% } %>
            </div>
        </div>
    </div>
</body>
<%- include('./../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form){
        event.preventDefault();
        if(confirm('tu quer deletar?')){
            form.submit();
        }
    }
</script>
</html>